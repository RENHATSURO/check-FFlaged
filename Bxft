-- LocalScript

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local placeId = game.PlaceId

--=== Création du GUI ===--

local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 150, 0, 50)
frame.Position = UDim2.new(0.5, -75, 0.1, 0)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

-- arrondir
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = frame


--=== Texte + couleur selon PlaceId ===--

if placeId == 79091703265657 or placeId == 100117331123089 then
    label.Text = "redz"
    label.TextColor3 = Color3.fromRGB(255, 0, 0)

elseif placeId == 7449423635 or placeId == 4442272183 then
    label.Text = "safe"
    label.TextColor3 = Color3.fromRGB(0, 255, 0)

else
    label.Text = "error 404"
    label.TextColor3 = Color3.fromRGB(150, 0, 200)
end

--=== Animation d’apparition ===--

frame.BackgroundTransparency = 1
label.TextTransparency = 1
frame.Size = UDim2.new(0, 120, 0, 40)

local appearTweenInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

TweenService:Create(frame, appearTweenInfo, {
    BackgroundTransparency = 0.5,
    Size = UDim2.new(0, 150, 0, 50)
}):Play()

TweenService:Create(label, appearTweenInfo, {
    TextTransparency = 0
}):Play()

--=== Pulsation au clic ===--

local function pulse()
    local shrink = TweenService:Create(frame, TweenInfo.new(0.1, Enum.EasingStyle.Quad), {
        Size = UDim2.new(0, 140, 0, 45)
    })
    local grow = TweenService:Create(frame, TweenInfo.new(0.1, Enum.EasingStyle.Quad), {
        Size = UDim2.new(0, 150, 0, 50)
    })

    shrink:Play()
    shrink.Completed:Connect(function()
        grow:Play()
    end)
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        pulse()
    end
end)

--=== Effet de hover (survol) ===--

local hoverIn = TweenService:Create(frame, TweenInfo.new(0.15, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 0.7
})

local hoverOut = TweenService:Create(frame, TweenInfo.new(0.15, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 0.5
})

frame.MouseEnter:Connect(function()
    hoverIn:Play()
end)

frame.MouseLeave:Connect(function()
    hoverOut:Play()
end)
